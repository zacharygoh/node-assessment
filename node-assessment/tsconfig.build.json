{
    "compilerOptions": {
      "module": "commonjs",
      "declaration": true,
      "target": "es6",
      "sourceMap": true,
      "noEmitOnError": true,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "resolveJsonModule": true
    },
    "exclude": [
      "node_modules",
      "dist"
    ]
}